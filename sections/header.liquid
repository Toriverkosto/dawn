  header.header section.language-switcher {
    grid-area: language-switcher;
    width: 6.4rem;
    font-size: 1.5rem;
    position: relative;
  }

  header.header section.language-switcher > div.summary {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    cursor: pointer;
  }

  header.header section.language-switcher > div.summary > * {
    font-size: 1.6rem;
    font-weight: bold;
    color: rgb(var(--color-foreground));
  }

  header.header section.language-switcher > div.summary > span.country-name {
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 10rem;
    overflow: hidden;
  }

  header.header section.language-switcher > div.summary > span.country-name,
  header.header section.language-switcher > div.summary > span.currency-symbol {
    display: none;
  }

  header.header section.language-switcher > div.summary > span.currency-iso-code {
    font-size: 1.4rem;
    line-height: 1.7rem;
    margin-top: 0.4rem;
  }

  header.header section.language-switcher > div.summary > div.language-bubble {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  header.header section.language-switcher > div.summary > div.language-bubble > svg {
    position: relative;
    width: 2.8rem;
    height: 2.8rem;
  }

  header.header section.language-switcher > div.summary > div.language-bubble > span.language-code {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    color: rgb(var(--color-background));
    font-weight: bold;
    font-size: 1.4rem;
  }



  body.language-switcher-modal-open {
    overflow: hidden;
  }

  body.language-switcher-modal-open header.header section.language-switcher > div.modal-container {
    display: flex;
  }

  header.header section.language-switcher > div.modal-container {
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background-color: rgba(255, 255, 255, 0.85);
    justify-content: center;
    align-items: center;
    font-weight: normal;
    padding: 0 3.2rem;
    margin-left: 0;
    z-index: 10;
    display: none;
    cursor: default;
  }

  header.header section.language-switcher > div.modal-container > div.modal-popup {
    position: relative;
    background-color: rgb(var(--color-background));
    color: rgb(var(--color-foreground));
    max-width: 37.5rem;
    width: 100%;
    border-radius: 0.8rem;
    padding: 4.8rem 1.6rem 2.4rem;
    box-shadow: 0 4px 4px rgba(0, 0, 0, 0.25);
  }

  header.header section.language-switcher > div.modal-container > div.modal-popup > a.close {
    position: absolute;
    right: 1.6rem;
    top: 0.8rem;
    display: flex;
    flex-direction: row;
    align-items: center;
    cursor: pointer;
  }

  header.header section.language-switcher > div.modal-container > div.modal-popup > a.close:hover {
    text-decoration: underline;
  }

  header.header section.language-switcher > div.modal-container > div.modal-popup > a.close > svg {
    width: 2.4rem;
    height: 2.4rem;
    margin-left: 0.4rem;
  }

  header.header section.language-switcher > div.modal-container > div.modal-popup > form.language-switcher-form > details {
    position: relative;
  }

  header.header section.language-switcher > div.modal-container > div.modal-popup > form.language-switcher-form:first-of-type {
    margin-bottom: 1.6rem;
  }

  header.header section.language-switcher > div.modal-container > div.modal-popup > form.language-switcher-form > details > summary {
    border-radius: 0.8rem;
    border: none;
    color: rgb(var(--color-background-2));
    background-color: rgb(var(--color-background));
    filter: brightness(1.15);
    width: 100%;
    padding: 0.8rem 1.6rem;
    font-weight: bold;
    appearance: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  header.header section.language-switcher > div.modal-container > div.modal-popup > form.language-switcher-form > details > summary > svg {
    transition: transform 0.25s
  }

  header.header section.language-switcher > div.modal-container > div.modal-popup > form.language-switcher-form > details[open] > summary {
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
  }

