    border-top-right-radius: 0;
  }

  header.header section.language-switcher > div.modal-container > div.modal-popup > form.language-switcher-form > details[open] > summary > svg {
    transform: rotate(180deg);
  }

  header.header section.language-switcher > div.modal-container > div.modal-popup > form.language-switcher-form > details > ul {
    position: absolute;
    z-index: 1;
    background-color: rgb(var(--color-background));
