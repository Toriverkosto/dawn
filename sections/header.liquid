<script>
  function addDetailsCloseListener (detailsElement) {
    window.addEventListener('click', (event) => {
      let closestDetails = event.target.closest('details');
      if (closestDetails !== detailsElement) {
        detailsElement.removeAttribute('open');
      }
    });
  }

  function openLanguageSwitcherModal () {
    document.querySelector('body').classList.add('language-switcher-modal-open');
  }

  function closeLanguageSwitcherModal () {
    document.querySelector('body').classList.remove('language-switcher-modal-open');
  }

  document.addEventListener('DOMContentLoaded', () => {
    addDetailsCloseListener(document.querySelector('details.language-select'));
    addDetailsCloseListener(document.querySelector('details.country-select'));

    function languageFormLIClick (event) {
      const form = event.currentTarget.closest('form.language-switcher-form');
      const code_input = form.querySelector('input[name="language_code"], input[name="country_code"]');
      code_input.value = event.currentTarget.dataset.value;
      form.submit();
    }

    document.querySelectorAll('form.language-switcher-form li')
      .forEach(item => item.addEventListener('click', languageFormLIClick));
  });
</script>

